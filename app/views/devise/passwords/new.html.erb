<section class="main_page_wrapper w-100">
  <div class="section-container d-flex flex-column align-items-center">

    <h2 class="main-title">Forgot your password?</h2>

    <div class="form-wrapper">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-fields-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'sign-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>